
<% @posts.each do |post| %>
<div class="container-fluid">
  <div class="article">
    <div class="row" style="padding:10px;">
      <div class="col-md-4" style="padding-right:0%">
        <div class="img">
          <%= image_tag(post.image.url, class: "post", alt: 'Image') if post.image? %>
        </div>
      </div>
  <div class="col-md-8" style="padding-left:15px">
        <p class="light"style="display: inline"> <%= post.title %> by <%= post.author %></p>
<hr></hr>
        <div class="post">
          <p><%= post.body %></p>
        </div>
        <div class="post">
          <p style="color:#C0C0C0"><%= post.spanishbody %></p>
        </div>
  </div>
</div>
<% end %>
